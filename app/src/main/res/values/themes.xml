<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TechTrack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorPrimaryVariant">@color/my_light_primary_dark</item>
        <item name="colorOnPrimary">@color/my_light_on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/my_light_primary</item> <!-- You can change this to a different secondary color -->
        <item name="colorSecondaryVariant">@color/my_light_primary_dark</item>
        <item name="colorOnSecondary">@color/my_light_on_primary</item>

        <!-- Background and Surface colors -->
        <item name="android:windowBackground">@color/my_light_background</item>
        <item name="backgroundColor">@color/my_light_background</item>
        <item name="colorSurface">@color/my_light_surface</item>

        <!-- Text colors -->
        <item name="colorOnBackground">@color/my_light_on_background</item>
        <item name="colorOnSurface">@color/my_light_on_surface</item>

        <!-- Background -->
        <item name="background">@drawable/gradient_day</item>
    </style>


</resources>
