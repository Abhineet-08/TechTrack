<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Corner radius to match CardView -->
        </shape>
    </item>
    <item android:right="2dp"
        android:left="2dp"
        android:bottom="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
                android:width="2dp"
                android:color="?attr/colorPrimary" /> <!-- Outline color -->
            <corners android:radius="8dp" /> <!-- Corner radius to match CardView -->
        </shape>
    </item>
</layer-list>
