<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme -->
    <style name="Theme.TechTrack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/my_dark_primary</item>
        <item name="colorPrimaryVariant">@color/my_dark_primary_dark</item>
        <item name="colorOnPrimary">@color/my_dark_on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/my_dark_primary</item> <!-- You can change this to a different secondary color -->
        <item name="colorSecondaryVariant">@color/my_dark_primary_dark</item>
        <item name="colorOnSecondary">@color/my_dark_on_primary</item>

        <!-- Background and Surface colors -->
        <item name="android:windowBackground">@color/my_dark_background</item>

        <item name="colorSurface">@color/my_dark_surface</item>

        <!-- Text colors -->
        <item name="colorOnBackground">@color/forText</item>
        <item name="colorOnSurface">#1C1C1C</item>
        <item name="backgroundColor">@color/my_dark_background</item>

        <!-- Background -->
        <item name="background">@drawable/gradient_night</item>
    </style>

</resources>
